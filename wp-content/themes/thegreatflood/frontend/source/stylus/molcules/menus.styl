.menu
    @extend .list-unstyled

    .sidebar &

        &-item
            margin 0 0 16px

            > a
                color $text-color

                &:hover, &:focus, &:active
                    color $primary

            &.current-menu-item > a
                color $primary
        
        &-item-home
            margin 0 0 56px

    .home .sidebar &
        @extend .list-inline

        &-item

            > a
                @extend .btn
                @extend .btn-primary