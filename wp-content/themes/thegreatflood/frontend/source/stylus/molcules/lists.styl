.list

    &-unstyled
        margin 0
        padding 0
        list-style-type none
    
        > li
            list-style-type none 
            padding 0
            margin 0
    
    &-inline
        @extend .list-unstyled
        margin 0 0 0 -4px

        > li
            display inline-block
            padding 0 5px
    
    &-comma
        @extend .list-unstyled
        @extend .list-inline

        > li
            padding 0 0 0 5px
            
            &:after
                content ','
                padding 0 5px 0 0
                display inline-block
            
            &:last-child:after
                content ''

    &-pipe
        @extend .list-unstyled
        @extend .list-inline

        > li
            padding 0 0 0 5px
            
            &:after
                content '|'
                padding 0 5px 0 0
                display inline-block
            
            &:last-child:after
                content ''