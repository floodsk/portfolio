a, .lnk
    color $link-color
    text-decoration none
    
    &:hover, &:focus, &:active
        color $link-hover-color
    
    h1 &, h2 &, h3 &, h4 &, h5 &, h6 &
        color inherit 
        
        &:hover, &:focus, &:active
            color $primary

    
    &[href^="mailto:"], &-mail

        &:after
            content ''
            size( 18px )
            margin 0 0 0 11px
            display inline-block
            background-image url( './frontend/source/assets/wave.png' )