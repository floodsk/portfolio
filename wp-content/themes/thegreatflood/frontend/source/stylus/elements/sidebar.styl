.sidebar
    background-color transparent

    .home &
        background-color $index-bg

        +above( rupture.scale[ 4 ] + 1 )
            height 100%
            fixed top left
            overflow hidden
            size(  auto 100vh )
            padding 144px unit( floor( ( $jsidebar * 100 ) / 6 ), '%' ) 60px
            box-shadow: 0 2px 5px rgba(60, 57, 55, 0.8), inset -1px 0 0 $fourth;

        +below( 4 )
            padding 32px 16px
            box-shadow: inset 0 -1px 0 $fourth;